---
import BlogCard from '@/components/BlogCard.astro'
import Link from '@/components/Link.astro'
import PageHead from '@/components/PageHead.astro'
import { buttonVariants } from '@/components/ui/button'
import { SITE } from '@/consts'
import Layout from '@/layouts/Layout.astro'
import { getRecentPosts } from '@/lib/data-utils'


const blog = await getRecentPosts(SITE.featuredPostCount)
---

<Layout class="max-w-3xl">
  <PageHead slot="head" title="Rahul Setrakian | Offensive & Defensive Security, CTF Writeups" />
  <section class="rounded-lg border">
    <div class="flex flex-col space-y-1.5 p-6">
      <h3 class="text-3xl leading-none font-medium">hack·er</h3>
      <p class="text-muted-foreground text-sm">
        /ˈhæk.ər/ &bull; <span class="font-medium">Noun</span>
      </p>
    </div>

    <div class="p-6 pt-0">
  <p class="text-muted-foreground mb-2 text-sm">
    An autodidact programmer obsessed with cybersecurity — studying how systems
    fail, how defenses are built, and how vulnerabilities are discovered in the
    real world. Driven by curiosity, experimentation, and a hands-on approach to
    ethical hacking, artficial intelligence, and blockchain.
  </p>

  <p class="text-muted-foreground text-sm mb-2">
    Currently pursuing an MCA &bull; Founder of
    <span class="text-foreground font-medium"><Link href="https://xsecirc.github.io/" class="hover:text-[#737373] transition-colors"> xSecIRC</Link></span>,
    a Discord-based learning community focused on practical cybersecurity
    education and collaborative skill building.
  </p>

  <p class="text-foreground text-sm font-medium">
    <Link href="https://in.linkedin.com/in/rahulsetrakian" class="hover:text-[#737373] transition-colors">LinkedIn</Link> 
      &bull;
    <Link href="https://x.com/rahulsetrakian" class="hover:text-[#737373] transition-colors">Twitter</Link> 
      &bull;
    <Link href="https://www.youtube.com/@rahulsetrakian" class="hover:text-[#737373] transition-colors">YouTube</Link> 
      &bull; 
    <Link href="https://www.instagram.com/rahulsetrakian/" class="hover:text-[#737373] transition-colors">Instagram</Link>
      &bull;
    <Link href="mailto:rahul.infosec@proton.me" class="hover:text-[#737373] transition-colors">Email</Link> 
 
  </p>
</div>


  </section>
  <section class="flex flex-col gap-y-4">
    <h2 class="text-2xl font-medium">Latest posts</h2>
    <ul class="flex flex-col gap-y-4">
      {
        blog.map((post) => (
          <li>
            <BlogCard entry={post} />
          </li>
        ))
      }
    </ul>
    <div class="flex justify-center">
      <Link
        href="/blog"
        class={buttonVariants({ variant: 'ghost' }) + ' group'}
      >
        See all posts <span
          class="ml-1.5 transition-transform group-hover:translate-x-1"
          >&rarr;</span
        >
      </Link>
    </div>
  </section>
</Layout>
